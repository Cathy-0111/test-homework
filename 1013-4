#include<stdio.h>

int main(){
    int n,m;
    scanf("%d",&n);
    m=n;
    for(int t=1;t<=n;t++){
            for(int i=m-1;i>0;i--){
            printf("%s"," ");
        }
            for(int j=2*t-1;j>0;j--){
                printf("%s","*");
            }
            m-=1;
            printf("\n");
    }
}
